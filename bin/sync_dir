#!/usr/bin/env bash

function error_handler() {
  echo "Exited with BAD EXIT CODE '${2}' in ${0} script at line: ${1}."
  exit "$2"
}
trap 'error_handler ${LINENO} $?' ERR
set -o errtrace -o errexit -o nounset -o pipefail

# HELP: destroys given directory and replaces with another. usage: sync_dir_from src dst

src="$1"
dst="${*:2}"

function sync() {
  local_src="$1"
  local_dst="$2"
  if [[ -d "$local_src" ]]; then
    local_src="${local_src}/"
  fi

  rsync --delete -az "$local_src" "$local_dst"
}

original_dir="$(pwd)"
source "$(no_term_limits_common_shell_functions_location)"
c "$src"
for i in $dst ; do
  sync "$(pwd)/$i" "${original_dir}/${i}"
done
cd "$original_dir"
