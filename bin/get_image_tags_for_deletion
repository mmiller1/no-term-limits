#!/usr/bin/env bash

function error_handler() {
  >&2 echo "Exited with BAD EXIT CODE '${2}' in ${0} script at line: ${1}."
  exit "$2"
}
trap 'error_handler ${LINENO} $?' ERR
set -o errtrace -o errexit -o nounset -o pipefail

# HELP:

if [[ "$GET_ALL_DOCKER_IMAGE_TAGS_FOR_DELETION" == "true" ]]; then
  docker images --format "{{.Repository}}:{{.Tag}} {{.CreatedSince}}" | grep -v '<none>' | awk '{print $1}'
else
  docker images --format "{{.Repository}}:{{.Tag}} {{.CreatedSince}}" | egrep -v 'minute|second' | grep -v '<none>' | awk '{print $1}'
fi
